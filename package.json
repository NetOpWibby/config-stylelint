{
  "author": {
    "name": "netop://ウエハ",
    "url": "https://webb.page"
  },
  "description": "Opinionated Stylelint configuration",
  "devDependencies": {
    "@webb/config-prettier": "^2020.2.1-0.3",
    "chronver": "^2019.10.2-7.1",
    "del-cli": "^3.0.0",
    "husky": "^4.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5",
    "updates": "^9.3.3"
  },
  "homepage": "https://code.webb.page/Webb/config-stylelint",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && npm run pretty && npm run increment && git add -A :/"
    }
  },
  "license": "MIT",
  "main": "dist/index.js",
  "name": "@webb/config-stylelint",
  "prettier": "@webb/config-prettier",
  "publishConfig": {
    "registry": "https://npm.inc.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://code.webb.page/Webb/config-stylelint"
  },
  "scripts": {
    "build": "npm run cleanup && tsc",
    "cleanup": "del './dist'",
    "increment": "chronver --increment package",
    "pretty": "prettier --write 'dist/**/*.js' 'dist/**/*.ts'",
    "test": "run-s test:*",
    "test:dependencies": "updates --update ./",
    "test:typescript": "tsc"
  },
  "types": "dist/index.d.ts",
  "version": "2020.02.10"
}
